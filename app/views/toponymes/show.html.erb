
<small>Created by <%=  %></small>
<%= simple_format(@toponyme.toponyme_actuel) %>
<% if @toponyme.asset.exists? %>
<h3>Attached File</h3>
<div class="asset">
<p>
<%= link_to File.basename(@toponyme.asset.path), @toponyme.asset.url %>
</p>
<p><small><%= number_to_human_size(@toponyme.asset.size) %>
(<%= @toponyme.content_type %>)</small></p>
</div>
<% end %>
<%= authorized?("edit toponymes", @enqueteur) do %>
<%= link_to "Edit Toponyme", [:edit, @enqueteur, @toponyme] %>
<% end %>
<div id='toponyme'>
<h2>Toponyme actuel  : <%= @toponyme.toponyme_actuel %></h2>
<table>
<tr><td>variante graphique </td><td> <%= simple_format(@toponyme.variante_graphique) %></td>
<tr><td>prononciation locale </td><td> <%= simple_format(@toponyme.prononciation_locale) %></td>
<tr><td>emploi contexte </td><td><%= simple_format(@toponyme.emploi_contexte) %></td>
<tr><td>étymologie proposée </td><td><%= simple_format(@toponyme.ethymologie_proposee) %></td>
</table>
</div>

<%= authorized?("delete toponymes", @enqueteur) do %>
<%= link_to "Delete Toponyme",
enqueteur_toponyme_path(@enqueteur, @toponyme),
:method => :delete,
:confirm => "Are you sure you want to delete this toponyme?" %>
<% end %>